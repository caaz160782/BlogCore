@model BlogCore.Models.ViewModels.HomeVM;
@{
    ViewData["Title"] = "Home Page";
}

<div class="row mt-1">
    <div class="col-sm-12">
        <h1 class="text-center text-white bg-secondary py-1"> Últimos Cursos y tutoriales< /h1>
    </div>
</div>

@if (Model.ListArticulos.Count() > 0)
{
    <hr />
    <div class="row">
        @foreach(var articulo in Model.ListArticulos.OrderBy(o => o.Id))
        {
            <div class="col-4">
                <div class="card">
                    <img src="@Url.Content(articulo.UrlImagen)" class="card-img-top" alt="@articulo.Nombre" />
                    <div class="card-body">
                        <h5 class="text-center">@articulo.Nombre </h5>
                        <a asp-action="Detalle" class="btn btn-success" style="border-radius; 10px" asp-route-id="@articulo,Id">
                            <i class="fa-solid fa-eye"></i> Ver Detalle
                        </a>
                    </div>

                </div>
            </div>
        }

    </div>

}
else
{
    <p> No hay artículos</p>
}