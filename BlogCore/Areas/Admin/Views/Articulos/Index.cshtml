@{
    ViewData["Title"] = "Listado Articulos";
}

<div class="conatiner mt-4">
    <div class="row">
        <div class="col-8">
            <h2 class="text-primary">Lista de articulos</h2>
        </div>
        <div class="col-4 text-right">
            <a asp-area="Admin" asp-controller="Articulos" asp-action="Create" class="btn btn-primary"><i class="fa-solid fa-plus"></i> Crear Articulo</a>

        </div>
    </div>
    <br />
    <table id="tblArticulos" class="table table-striped table-bordered" style="width:100%">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre </th>
                <th>Categoría </th>
                <th>Imagen</th>
                <th>Fecha de creación</th>                                
                <th>Acciones</th>
            </tr>
        </thead>
    </table>
</div>

@section Scripts {
    <script src="~/js/articulos.js"></script>
}