@model IEnumerable<ApplicationUser>
@{
    ViewData["Title"] = "Listado Slider";
}
<br />

<div class="border">
    <div class="row">
        <div class="col-6">
            <h2 class="text-center">Lista de usuarios </h2>
        </div>
        <div class="col-6">
            <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-info"><i class="fas da-plus"></i> Registra nuevo Usuario</a>

        </div>
    </div>
    @if(Model.Count() > 0)
    {
        <table id="tblUsuarios" class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(m => m.Id)</th>
                    <th>@Html.DisplayNameFor(m => m.Nombre)</th>
                    <th>@Html.DisplayNameFor(m => m.Email)</th>              
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Nombre</td>
                        <td>@item.Email</td>
                        <td>
                            @if (item.LockoutEnd == null || item.LockoutEnd < DateTime.Now)
                            {
                                <a class="btn btn-success text-white" asp-action="Bloquear" asp-route-id="@item.Id" style="width:50px">
                                    <i class="fa-solid fa-lock-open"></i>
                                </a>
                            }
                            else
                            {
                                <a class="btn btn-danger text-white" asp-action="Desbloquear" asp-route-id="@item.Id" style="width:50px">
                                    <i class="fa-solid fa-lock"></i>
                                </a>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>

