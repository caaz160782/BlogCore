@model BlogCore.Models.Slider;

@{
    ViewData["Title"] = "Editar Slider";
}

<br />
<h3 class="text-center"> Editar slider</h3>
<form method="post" asp-action="Edit" enctype="multipart/form-data">
    <input asp-for="Id" type="hidden" />
    <div class="row px-2  border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-8  mt-4">
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Nombre" class="control-label"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Nombre" class="form-control" placeholder="Ingrese el nombre" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>
            </div>

            <br />
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="estado" class="control-label"></label>
                </div>
                <div class="col-8">
                    <input asp-for="estado" class="form-check-input" type="checkbox" />
                    <span asp-validation-for="estado" class="text-danger"></span>
                </div>
            </div>


            <br />
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="UrlImagen"></label>
                </div>
                <div class="col-8">
                    <input type="file" class="form-control" name="archivos" id="subidaArchivo" />
                    <span asp-validation-for="UrlImagen" class="text-danger"></span>
                </div>
            </div>

            <br />

            <div class="from-group row">
                <div class="col-12">
                    <br />
                    <div class="row">
                        <div class="col">
                            <button type="submit" class="btn btn-primary form-control">Editar Slider</button>
                        </div>
                        &nbsp;
                        <div class="col">
                            <a asp-action="Index" class="btn btn-success form-control">Volver a listado slider</a>
                        </div>
                    </div>

                </div>
            </div>
        </div>
        <div class="col-4 pt-3">
            <img src="@Url.Content(Model.UrlImagen)" alt="Imagen" class="img-fluid" />
        </div>
    </div>
</form>
