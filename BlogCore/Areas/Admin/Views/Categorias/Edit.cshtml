@model BlogCore.Models.Categoria;

@{
    ViewData["Title"] = "Editar Categoria";
}

<br />
<h3 class="text-center"> Editar categoría</h3>
<form method="post" asp-action="Edit">
    <input asp-for="Id" type="hidden" />
    <div class="row px-2 offset-1 border">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="col-10 offset-1 mt-4">
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Nombre" class="control-label"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Nombre" class="form-control" placeholder="Ingrese el nombre" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>
            </div>
            <br />
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Orden" class="control-label"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Orden" class="form-control" placeholder="Ingrese el Orden" />
                    <span asp-validation-for="Orden" class="text-danger"></span>
                </div>
            </div>
            <br />
            <div class="from-group row">
                <div class="col-12">
                    <div class="row">
                        <div class="col">
                            <button type="submit" class="btn btn-primary form-control">Editar Categoria</button>
                        </div>
                        &nbsp;
                        <div class="col">
                            <a asp-action="Index" class="btn btn-success form-control">Volver a listado Categorías</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}