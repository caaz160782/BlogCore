@{
    ViewData["Title"] = "Listado Categorías";
}
<div class="conatiner mt-4">
    <div class="row">
        <div class="col-8">
            <h2 class="text-primary">Lsita de categorías</h2>
        </div>
        <div class="col-4 text-right">
            <a asp-area="Admin" asp-controller="Categorias" asp-action="Create" class="btn btn-primary"><i class="fa-solid fa-plus"></i> Crear categoría</a>

        </div>
    </div>
    <br />
    <table id="tblCategorias" class="table table-striped table-bordered" style="width:100%">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre </th>
                <th>Orden </th>
                <th>Acciones</th>
            </tr>
        </thead>
    </table>
</div>

@section Scripts{
    <script src="~/js/categorias.js"></script>
}